        <attr name="progressBarColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ModalProgressView" parent="ProgressView">
        <attr name="progressBarColor"/>
        <attr name="progressLayout" format="reference"/>
        <attr name="showProgressDelay" format="boolean"/>
